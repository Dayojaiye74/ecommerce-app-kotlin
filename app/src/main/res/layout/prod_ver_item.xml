<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/buffered"
    android:id="@+id/pro_item_card_body"
    android:outlineAmbientShadowColor="@color/black"
    android:orientation="vertical"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="0.7">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="128dp"

                android:scaleType="centerCrop"
                android:src="@drawable/trans_vada" />

<!--            <ImageView-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_gravity="right"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:padding="5dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/gverified" />-->

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="05dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="2dp"
                android:ellipsize="marquee"
                android:gravity="center|start"
                android:lines="2"
                android:text="This is the lorem ipsum title for the price products"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginTop="05dp"
                android:ellipsize="marquee"
                android:gravity="top|start"
                android:lineHeight="12sp"
                android:lines="4"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="@string/food_info"
                android:textColor="@color/light_gray"
                android:textSize="13sp"
                tools:ignore="SmallSp,UnusedAttribute" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/review"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="â‚¦30 only"
                    android:textColor="@color/scrubber"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/addtoCart"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/bg_rectangle_order"
                    android:src="@drawable/delivery" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
